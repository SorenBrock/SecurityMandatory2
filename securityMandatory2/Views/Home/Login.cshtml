@model securityMandatory2.Models.LoginViewModel
<!DOCTYPE html>
@{
    ViewBag.Title = "Security - Login";
}
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <h1>Login</h1>
    <div>
        <div class="form-group">
            @using (Html.BeginForm("Login", "Home"))
            {
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Username, new
               {
                   @class = "form-control",
                   placeholder = @Html.DisplayNameFor(m => m.Username)
               })
                </div>
                <div class="form-group">
                    @Html.PasswordFor(x => x.Password, new
               {
                   @class = "form-control",
                   value = Model.Password,
                   placeholder = @Html.DisplayNameFor(m => m.Password)
               })
                </div>
                <p class="error">@Html.ValidationMessage("Error")</p>
                <div>
                    <button type="submit" class="btn btn-primary input-medium pullleft">Login</button>
                </div>
            }
        </div>
    </div>
</body>
</html>